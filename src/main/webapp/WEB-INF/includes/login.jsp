<div class="login">
    <div class="arrow-up"></div>
    <div class="formholder">
        <div class="randompad">
            <form id="login_form" class="form-horizontal"  method="post">
                <fieldset>
                    <div class="form-group">
                        <label for="login_user" class="col-lg-4 control-label">User Name</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="login_user" placeholder="User Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="login_pwd" class="col-lg-4 control-label">Password</label>
                        <div class="col-lg-8">
                            <input type="password" class="form-control" id="login_pwd" placeholder="Password">
                        </div>
                    </div>
                </fieldset>
                    <button type="submit" class="btn btn-primary" id="login_button" data-loading-text="<i class='icon-spinner icon-spin icon-large'></i> Login...">Login</button>
            </form>
        </div>
    </div>
</div>